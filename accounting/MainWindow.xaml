<Window x:Class="accounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:accounting"
        mc:Ignorable="d"
        Title="MainWindow" Height="560" Width="977"
        Loaded="Window_Loaded">
    <Grid x:Name="mainGrid">
        <TabControl FlowDirection="RightToLeft" Margin="0" BorderBrush="Gainsboro" FontSize="18">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="MinWidth" Value="100" />
                    <Setter Property="Padding" Value="10" />
                    <Setter Property="Height" Value="65" />
                </Style>
            </TabControl.Resources>
            <TabItem Header="خانه">
                <Grid FlowDirection="RightToLeft">
                    <StackPanel HorizontalAlignment="Left" Height="461" Width="244" Background="AliceBlue">
                        <Label x:Name="label" Content="موجودی صندوق" HorizontalAlignment="Center" />
                        <TextBlock x:Name="TBamount" Text="0" HorizontalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="ایجاد حساب جدید" Height="65" VerticalAlignment="Top">
                <TabItem.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Canvas.Left" Value="50" />
                    </Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Canvas.Left" Value="230" />
                    </Style>
                </TabItem.Resources>
                <Canvas Name="canvasTab2">

                    <TextBlock Name="lblDes"
                               Text="برای اضافه کردن حساب جدید اطلاعات زیر را وارد و روی ایجاد کلیک کنید."
                               Canvas.Top="15" Canvas.Left="50" />
                    <uc:FormGroup x:Name="FgName"
                                  Title="نام"
                                  MaxLength="15"
                                  LengthErrorMessage="حداکثر 15 کاراکتر"
                                  Alphabetical="True"
                                  AlphabeticalErrorMessage="فقط از حروف استفاده کنید."
                                  Canvas.Top="50" />
                    <uc:FormGroup x:Name="FgLastName"
                                  Title="نام خانوادگی"
                                  MaxLength="20"
                                  MaxLengthErrorMessage="حداکثر 20 کارکاتر"
                                  Alphabetical="True"
                                  AlphabeticalErrorMessage="فقط از حروف استفاده کنید."
                                  Canvas.Top="110" />
                    <uc:FormGroup x:Name="FgFatherName"
                                  Title="نام پدر"
                                  MaxLength="15"
                                  MaxLengthErrorMessage="حداکثر 15 کارکاتر"
                                  Alphabetical="True"
                                  AlphabeticalErrorMessage="فقط از حروف استفاده کنید."
                                  Canvas.Top="170" />
                    <uc:FormGroup x:Name="FgNationalId"
                                  Title="کد ملی"
                                  Length="10"
                                  LengthErrorMessage="کد ملی معتبر وارد کنید."
                                  Numeric="True"
                                  NumericErrorMessage="فقط از اعداد استفاده کنید."
                                  Canvas.Top="230" />
                    <uc:FormGroup x:Name="FgSelfAccountNumber"
                                  Title="شماره حساب"
                                  LengthErrorMessage="16"
                                  MaxLengthErrorMessage="لطفا شماره حساب معتبر وارد کنید."
                                  Numeric="True"
                                  NumericErrorMessage="فقط از اعداد استفاده کنید."
                                  Canvas.Top="290" />

                    <Button x:Name="BtnCreateAccount" Content="ایجاد" Canvas.Left="614" Canvas.Top="411" Height="32"
                            Width="73" Click="CreateAccount" />

                    <Label x:Name="LblMessage" Content="Label" Canvas.Left="50" Visibility="Hidden" Canvas.Top="370"
                           Height="64" Width="424" VerticalAlignment="Center" HorizontalAlignment="Center"
                           VerticalContentAlignment="Center" Background="#FF95FF95" />
                </Canvas>

            </TabItem>
            <TabItem Header="Details" />
        </TabControl>
    </Grid>
</Window>